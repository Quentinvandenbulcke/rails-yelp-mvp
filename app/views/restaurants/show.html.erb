<ul>
  <h2><%= @restaurant.name %></h2>
  <li>Address : <%= @restaurant.address %></li>
  <li>Phone number : <%= @restaurant.phone_number %></li>
  <li>Category : <%= @restaurant.category %></li>
</ul>
<h2>Reviews of <%= @restaurant.name %></h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>Rating :<%= review.rating %> </li>
    <li>Comment :<%= review.content %> </li>
  <% end %>
</ul>

<h1>New review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to list of restaurants", restaurants_path %>
